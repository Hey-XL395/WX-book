/* pages/details/details.wxss */

header {
  background-color: #ffa500;
  display: inline-block;
  width: 100%;
  height: 10%;
  position: absolute;
}

.replay {
  display: flex;
  margin: 20rpx;
  justify-content: space-around;
}

.replay1 {
  color: #ffa500;
}

.replay2 {
  display: flex;
  width: 100%;
  text-align: center;
}

.all {
  text-align: center;
  background-color: rgb(192, 192, 192);
  padding: 25rpx 80rpx;
  margin: 10rpx 20rpx;
}

.vanicon {
  vertical-align: middle;
}

.deta1 {
  color: #ffa500;
  margin: 20rpx 0;
}

.replaytitle {
  text-align: center;
  font-size: 25rpx;
  width: 220rpx;
  margin: 0 auto;
}

.deta {
  font-size: 35rpx;
  margin: 20rpx;
}

.imgsize1 {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.rem {
  display: flex;
  background: white;
}

.btn {
  width: 100%;
  display: flex;
  justify-content: space-around;
  text-align: center;
  position: absolute;
  /* 移动自身50% */
  transform: translateY(-50%);
}

.tab {
  width: 90%;
  position: absolute;
  right: 50%;
  top: 30%;
  transform: translateX(50%);
}

.update1 {
  color: skyblue;
}

.update {
  width: 100%;
  text-align: center;
  margin-top: 7%;
  font-size: 30rpx;
}

.introduction {
  background: white;
  font-size: 35rpx;
  padding: 20rpx;
}

.text {
  padding: 0 30rpx;
}

footer {
  position: absolute;
  display: inline-block;
  width: 100%;
  bottom: 0;
  background-color: #fff0f5;
  height: 50%;
}

.title {
  font-weight: bold;
}

.img1 {
  width: 250rpx;
  height: 340rpx;
}
.author {
  font-size: 25rpx;
  margin: 20rpx;
  color: silver;
}

image {
  width: 190rpx;
  height: 260rpx;
  margin: 10rpx;
}

.top {
  z-index: 999;
  display: inline-block;
  text-align: center;
  width: 100%;
  position: absolute;
  top: 10rpx;
}
